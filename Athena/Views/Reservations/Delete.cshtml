@model Athena.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <h2 class="float-left">Delete</h2>
        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">

            <div class="col-8 offset-2">
                <h4>
                    Are you sure you want to delete this Reservation?
                </h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StartOn)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StartOn)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EndOn)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EndOn)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedByUser)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedByUser.UserName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Group)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Group.GroupName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Template)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Template.Lab)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ReservationId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </section>


</main>