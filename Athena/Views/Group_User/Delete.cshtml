@model Athena.Models.Group_User

@{ ViewData["Title"] = "Remove User from Group"; }

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <h2 class="float-left">Remove User</h2>
        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">

            <h3>Are you sure you want to remove this user from the @Html.DisplayFor(model => model.Group.GroupName) Group?</h3>
            <div>
                <hr />
                <dl class="row">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.UserName)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Remove User" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </section>
</main>